@model List<AssetLocater.Domain.Models.StoredFile>

@{
    ViewData["Title"] = "Admin";
}

<h2>File Management</h2>

<hr />

<h4>Upload New File</h4>

<form asp-action="Upload" method="post" enctype="multipart/form-data" class="mb-4">
    <div class="row g-2">
        <div class="col-md-4">
            <input type="file" name="file" class="form-control" required />
        </div>
        <div class="col-md-3">
            <select name="fileType" class="form-select" required>
                <option value="">Select Type</option>
                <option value="Vehicles">Vehicles</option>
                <option value="Deeds">Deeds</option>
            </select>
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary">Upload</button>
        </div>
    </div>
</form>

<hr />

<h4>Stored Files</h4>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Created</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.Name</td>
                <td>@file.FileType</td>
                <td>@file.CreatedAt</td>
                <td class="text-center">
                    <a asp-action="Download" asp-route-id="@file.Id" class="btn btn-sm btn-outline-primary">
                        Download
                    </a>

                    <form asp-action="Delete" asp-route-id="@file.Id" method="post" class="d-inline">
                        <button class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Delete this file?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
